%% beamerthemesuiilab.sty
%% 住井研究室のステキな Beamer テーマ

\mode<presentation>

\usetheme{Boadilla}
\usefonttheme{default}
\usecolortheme{default}
\useinnertheme{circles}
\useoutertheme{default}

\setbeamerfont{frametitle}{size=\LARGE}
\setbeamertemplate{frametitle}[default][center]

\setbeamersize{text margin left=2em,text margin right=2em}
\setbeamertemplate{navigation symbols}{}

%% fonts
\usefonttheme{professionalfonts}
\usefonttheme[onlymath]{serif}
\renewcommand{\kanjifamilydefault}{\gtdefault}

%% footline
\setbeamertemplate{footline}[frame number]
\setbeamerfont{footline}{size=\footnotesize,series=\bfseries}
\setbeamercolor{footline}{fg=black,bg=black}

%% itemize/enumerate/toc
\setbeamertemplate{itemize items}[square]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[triangle]
\setbeamerfont{itemize/enumerate body}{size=\Large}
\setbeamerfont{itemize/enumerate subbody}{size=\Large}
\setbeamerfont{itemize/enumerate subsubbody}{size=\large}
\setbeamertemplate{sections/subsections in toc}[circle]
\setbeamerfont{section in toc}{size=\Large}
\setbeamerfont{section number projected}{series=\bfseries,size=\Large}

%%
%% blocks
%%

\setbeamertemplate{blocks}[rounded]%[shadow=true]
%\setbeamerfont{block title}{series=\bfseries}
\setbeamercolor{block title}{fg=white,bg=structure}
\setbeamercolor{block body}{bg=structure!10}

%\setbeamerfont{block title example}{series=\bfseries}
\setbeamercolor{block title example}{fg=white,bg=OliveGreen}
\setbeamercolor{block body example}{use=block title example,bg=block title example.bg!10!white}

%\setbeamerfont{block title alerted}{series=\bfseries}
\setbeamercolor{block title alerted}{fg=white,bg=BrickRed}
\setbeamercolor{block body alerted}{use=block title alerted,bg=block title alerted.bg!10!white}

% 色設定

\definecolor{UniBlue}{RGB}{0,50,150}
\definecolor{EnvBlue}{RGB}{0,50,200}
\definecolor{ClosBlue}{RGB}{0,100,150}
\definecolor{HeapBlue}{RGB}{0,50,200}
\definecolor{HeapBlue'}{RGB}{0,100,150}
\definecolor{TermGreen}{RGB}{0,150,50}
\definecolor{TermGreen'}{RGB}{0,100,50}
\definecolor{AlertOrange}{RGB}{255,76,0}
\definecolor{AlmostBlack}{RGB}{38,38,38}
\definecolor{GrayedOut}{RGB}{128,128,128}
\setbeamercolor{normal text}{fg=AlmostBlack}  % 本文カラー
\setbeamercolor{structure}{fg=UniBlue} % 見出しカラー
\setbeamercolor{block title}{fg=UniBlue!50!black, bg=UniBlue!50!white} % ブロック部分タイトルカラー
\setbeamercolor{block body}{fg=black, bg=UniBlue!8!white} % ブロック部分タイトルカラー
\setbeamercolor{alerted text}{fg=AlertOrange} % \alert 文字カラー
\mode<beamer>{
    \definecolor{BackGroundGray}{RGB}{254,254,254}
    \setbeamercolor{background canvas}{bg=BackGroundGray} % スライドモードのみ背景をわずかにグレーにする
}

%%
%% title page
%%

\newcommand\insertsession{}
\newcommand\session[1]{\gdef\insertsession{#1}}

%\setbeamerfont{frametitle}{series=\bfseries}
\setbeamercolor{frametitle}{bg=white,fg=structure}
%\setbeamerfont{title}{size=\Large,series=\bfseries}
\setbeamerfont{title}{size=\LARGE}
\setbeamerfont{date}{size=\normalsize}
\setbeamerfont{author}{size=\large}
\setbeamerfont{institute}{size=\normalsize}
\setbeamerfont{session}{size=\small}
\setbeamercolor{innerbox}{bg=white,fg=UniBlue}

\defbeamertemplate*{title page}{sumiilab}[1][]{
  \vbox{}
  \vfill
  \begin{centering}
    \ifx\insertsession\@empty%
    \else%
      \begin{beamercolorbox}[sep=8pt,center,#1]{session}%
        \usebeamerfont{session}\insertsession%
      \end{beamercolorbox}%
    \fi%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.75em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}\vskip0.5em
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \end{centering}
  \vfill
}

\renewcommand\today{\number\year{}年\number\month{}月\number\day{}日}

%%
%% appendix
%%

\renewcommand{\appendixname}{予備スライド}

\let\org@appendix=\appendix
\renewenvironment{appendix}{%
  \newcounter{framenumberappendix}
  \setcounter{framenumberappendix}{\value{framenumber}}
  \org@appendix
}{%
  \addtocounter{framenumberappendix}{-\value{framenumber}}
  \addtocounter{framenumber}{\value{framenumberappendix}}
}

\mode
<all>
